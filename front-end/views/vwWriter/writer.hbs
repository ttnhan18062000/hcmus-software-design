<div class="container-fluid my-5">
    <div class="row mb-3">
        <div class="col-md-3 ">
            <div class="card mb-3 border">
                    <h4 class="card-header">
                        <i class="fa fa-archive" aria-hidden="true"></i>
                        Quản lý bài viết
                    </h4>
                    <div class="list-group list-group-flush">                        
                        <a href="/writer"
                            class="list-group-item list-group-item-action {{#if wait}}active{{/if}}">
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                            Chưa duyệt 
                        </a>                       
                        <a href="/writer/rejected"
                            class="list-group-item list-group-item-action">
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                            Bị từ chối                           
                        </a>                       
                        <a href="/writer/pending"
                            class="list-group-item list-group-item-action ">
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                            Chờ xuất bản                           
                        </a>                       
                        <a href="/writer/published"
                            class="list-group-item list-group-item-action ">
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                            Đã xuất bản                       
                        </a>                       
                    </div>
                </div>
        </div>
        <div class="col-md-9 ">
            <div class="card border-dark">
                <div class="card-header bg-dark text-white d-flex justify-content-between">
                    <h4 class="text-white"><span><i class="bi bi-table me-2"></i></span> Danh sách bài viết</h4>
                    <a class="btn btn-primary" href="/posting" role="button">Thêm bài viết mới</a>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="data-writerPostEdit-table table table-hover table-bordered" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Tên Bài Viết</th>
                                    <th scope="col">Chuyên mục</th>
                                    <th scope="col">&nbsp;</th>

                                </tr>
                            </thead>
                            <tbody>
                                {{#each articles}}

                                <tr>
                                    <th scope="row">{{id}}</th>
                                    <td>{{title}}</td>
                                    <td>{{cat_title}} {{#if parent_title}} - ({{parent_title}}){{/if}}</td>
                                    <td>
                                        <a name="" id="" class="btn btn-primary btn-sm" href="/editArticle/{{id}}"
                                            role="button" title="Edit">
                                            <i class="fa fa-pencil" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
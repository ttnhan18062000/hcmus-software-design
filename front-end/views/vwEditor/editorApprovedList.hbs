<div class="container-fluid my-5">
    <div class="row mb-3">
        <div class="col-md-3 ">
            <div class="card mb-3 border">
                    <h4 class="card-header">
                        <i class="fa fa-archive" aria-hidden="true"></i>
                        Quản lý bài viết
                    </h4>
                    <div class="list-group list-group-flush"> 
                        <a href="/editorAssignedCat"
                            class="list-group-item list-group-item-action">
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                            Chuyên mục được phân công  
                        </a>                        
                        <a href="/editorPostList"
                            class="list-group-item list-group-item-action ">
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                            Chưa duyệt   
                        </a>     
                         <a href="/editorRejectedList"
                            class="list-group-item list-group-item-action">
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                            Đã từ chối                         
                        </a>                   
                        <a href="/editorApprovedList"
                            class="list-group-item list-group-item-action {{#if approved}}active{{/if}}">
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                            Đã duyệt                         
                        </a>                      
                                            
                    </div>
                </div>
        </div>
        <div class="col-md-9 ">
            <div class="card border-dark">
                <div class="card-header bg-dark text-white d-flex justify-content-between">
                    <h4 class="text-white"><span><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span> Danh sách bài viết</h4>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="data-editorApprovedList-table table table-hover table-bordered" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Tên Bài Viết</th>
                                    <th scope="col">Chuyên mục</th>
                                    <th scope="col">Ngày xuất bản</th>                                    
                                    <th scope="col">Trạng thái</th>                                    
                                   

                                </tr>
                            </thead>
                            <tbody>
                                {{#each newArtList }}

                                <tr>
                                    <th scope="row">{{article_id}}</th>
                                    <td>{{title}}</td>
                                    <td>{{cat_title}} {{#if parent_title}} - ({{parent_title}}){{/if}}</td>
                                   <td>{{published_date}}</td>
                                   <td>{{status}}</td>
                                   
                                    {{!-- <td><a name="" id="" class="btn btn-success" href="#" role="button">
                                            <i class="fa fa-check" aria-hidden="true"></i>
                                            Duyệt
                                        </a></td> --}}
                                </tr>
                                {{/each}}



                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
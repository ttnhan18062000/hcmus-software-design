<!-- Trending Area Start -->
{{#section "css"}}
  <style>
    .myScroll {
      height: 50vh;
      overflow-y: scroll;
    }

    .myScroll::-webkit-scrollbar {
      width: 5px;
    }

    .myScroll::-webkit-scrollbar-track {
      box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.4);
      border-radius: 2px;
    }

    /* Handle */
    .myScroll::-webkit-scrollbar-thumb {
      background: #f7f7f7;
      border-radius: 3px;
    }

    #navigation {
      margin-bottom: 0;
    }

    .weekly2-wrapper {
      border-bottom: 1px solid #eeeeee;
    }
    .what-cap *{
      margin-bottom: 0 !important;
    }
    .what-cap{
      background-color: #f5f5f5 !important;
    }
    a{
      color: inherit;
    }
  </style>
{{/section}}
{{#section "js"}}
  <script>
    $(document).ready(() => {
      const height = $('#topTrending').height() - 80;
      $('#topWeekScroll').height(height);
    })
  </script>
{{/section}}
<div class="trending-area fix mt-4">
  <div class="container">
    <div class="trending-main">
      <div class="row ">
        <div class="col-lg-8" id="topTrending">
          <div class="section-tittle">
            <h3>Weekly Top News</h3>
          </div>
          <!-- Trending Top -->
          <div class="trending-top mb-30">
            <div class="trend-top-img">
              <img src="{{top1Week.thumbnail_image}}" alt="">
              <div class="trend-top-cap">
                <span><a href="/categories/{{top1Week.category_id}}">{{top1Week.category_name}}</a></span>
                <h2><a href="/articles/{{top1Week.id}}">{{top1Week.title}}</a></h2>
                {{#if is_premium}}
                  <i class="fas fa-key" style="color:orange;">  Premium</i>
                {{/if}}
                <p>{{formatTime top1Week.created_time}}</p>
              </div>
            </div>
          </div>
          <!-- Trending Bottom -->
          <div class="trending-bottom">
            <div class="row">
              {{#each listTopWeek}}
                <div class="col-lg-4">
                  <div class="single-bottom">
                    <div class="trend-bottom-img mb-30">
                      <img src="{{this.thumbnail_image}}" alt="">
                    </div>
                    <div class="trend-bottom-cap">
                      <span class="color1"><a href="/categories/{{category_id}}">{{this.category_name}}</a></span>
                      <h4><a href="/articles/{{this.id}}">{{this.title}}</a></h4>
                      {{#if is_premium}}
                        <i class="fas fa-key" style="color:orange;">  Premium</i>
                      {{/if}}
                      <p>{{formatTime this.created_time}}</p>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
        <!-- Riht content -->
        <div class="col-lg-4">
          <div class="section-tittle">
            <h3>Most Views</h3>
          </div>
          <div class="myScroll" id="topWeekScroll">
            {{#each listTopViews}}
              <div class="trand-right-single d-flex">
                <div class="trand-right-img">
                  <img src="{{thumbnail_image}}" width="140px" height="120px" alt="">
                </div>
                <div class="trand-right-cap">
                  <span class="color1"><a href="/categories/{{category_id}}">{{this.category_name}}</a></span>
                  <h4 class="mb-0"><a href="/articles/{{id}}">{{title}}</a></h4>
                  {{#if is_premium}}
                    <i class="fas fa-key" style="color:orange;">  Premium</i>
                  {{/if}}
                  <p class="mb-0">{{formatTime created_time}}</p>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="weekly2-news-area pt-50">
  <div class="container">
    <div class="weekly2-wrapper">
      <!-- section Tittle -->
      <div class="row">
        <div class="col-lg-12">
          <div class="section-tittle mb-30">
            <h3>What&#39;s new</h3>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12 ">
          <div class="weekly2-news-active row row-cols-6">
            {{#each listMostRecent}}
              <div class="weekly2-single col mb-5">
                <div class="weekly2-img">
                  <img src="{{thumbnail_image}}" alt="">
                </div>
                <div class="weekly2-caption">
                  <span class="color1"><a href="/categories/{{category_id}}">{{this.category_name}}</a></span>
                  <p>{{timeFromNow created_time}}</p>
                  <h4><a href="/articles/{{id}}">{{title}}</a></h4>
                  {{#if is_premium}}
                    <i class="fas fa-key" style="color:orange;">  Premium</i>
                  {{/if}}
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="whats-news-area pt-50 pb-20">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 ">
        <div class="section-tittle mb-30">
          <h3>Top Categories</h3>
        </div>
        <div class="row d-flex justify-content-between">
          <div class="col-12">
            <div class="properties__button">
              <!--Nav Button  -->
              <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                  {{#each listArticleOfTop10Cats}}
                    {{#if @first}}
                      <a class="nav-item nav-link active" id="nav-{{id}}-tab" data-toggle="tab" href="#nav-{{id}}"
                        role="tab" aria-controls="nav-home" aria-selected="true">{{name}}</a>
                    {{else}}
                      <a class="nav-item nav-link" id="nav-{{id}}-tab" data-toggle="tab" href="#nav-{{id}}" role="tab"
                        aria-controls="nav-profile" aria-selected="false">{{name}}</a>
                    {{/if}}
                  {{/each}}
                </div>
              </nav>
              <!--End Nav Button  -->
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="tab-content" id="nav-tabContent">
              {{#each listArticleOfTop10Cats}}
                {{#if @first}}
                  <div class="tab-pane fade show active" id="nav-{{id}}" role="tabpanel"
                    aria-labelledby="nav-{{id}}-tab">
                    <div class="whats-news-caption">
                      <div class="row row-cols-2">
                        {{#each articles}}
                          <div class="col" style="left: 300px;">
                            <div class="single-what-news mb-100">
                              <div class="what-img">
                                <img src="{{thumbnail_image}}" alt="" width="450" height="400">
                              </div>
                              <div class="what-cap">
                                <span class="color1"><a href="/categories/{{../id}}">{{../name}}</a></span>
                                <p>{{timeFromNow created_time}}</p>
                                <h4><a href="/articles/{{id}}">{{title}}</a></h4>
                                {{#if is_premium}}
                                  <i class="fas fa-key" style="color:orange;">  Premium</i>
                                {{/if}}
                              </div>
                            </div>
                          </div>
                        {{/each}}
                      </div>
                    </div>
                  </div>
                {{else}}
                  <div class="tab-pane fade" id="nav-{{id}}" role="tabpanel"
                    aria-labelledby="nav-{{id}}-tab">
                    <div class="whats-news-caption">
                      <div class="row row-cols-2">
                        {{#each articles}}
                          <div class="col" style="left: 300px;">
                            <div class="single-what-news mb-100">
                              <div class="what-img">
                                <img src="{{thumbnail_image}}" alt=""  width="450" height="400">
                              </div>
                              <div class="what-cap">
                                <span class="color1"><a href="/categories/{{../id}}">{{../name}}</a></span>
                                <p>{{timeFromNow created_time}}</p>
                                <h4><a href="/articles/{{id}}">{{title}}</a></h4>
                                {{#if is_premium}}
                                  <i class="fas fa-key" style="color:orange;">  Premium</i>
                                {{/if}}
                              </div>
                            </div>
                          </div>
                        {{/each}}
                      </div>
                    </div>
                  </div>
                {{/if}}
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

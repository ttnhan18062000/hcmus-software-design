{{#section "css"}}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    integrity="sha256-eZrrJcwDc/3uDhsdt61sL2oOBY362qM3lon1gyExkL0=" crossorigin="anonymous" />
  <style>
    .posts-list {
      overflow: hidden;
    }
  </style>
{{/section}}
{{#section "js"}}
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
  <script>
    const relatedPost = $('#relatedPost');
    const blogArea = $('#blogArea');
    $(document).scroll(() => {
      const scrollTop = $(this).scrollTop();
      if (scrollTop > 140) {
        if (scrollTop < blogArea.height() - relatedPost.height()) {
          relatedPost.css({ 'position': 'relative', 'top': scrollTop - 20 })
        }
      }
      else {
        relatedPost.css({ 'position': 'static', 'top': 0 })
      }
    });
    $('#cmtForm').submit((e) => {
      e.preventDefault();
      const comment = $('#comment').val();
      if (!comment) return;
      $.post('/articles/add-comment', {
        content: comment,
        article_id: "{{article.id}}",
        commenter_id: "{{currentUser.id}}"
      }, () => {
        location.reload();
      })
    })
  </script>
{{/section}}
<section class="blog_area single-post-area section-padding" id="blogArea">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 posts-list">
        <div class="single-post">
          <div class="feature-img">
            <img class="img-fluid" src="{{article.thumbnail_image}}" width="710" alt="">
          </div>
          <div class="blog_details">
            <h2>{{article.title}}</h2>
            <ul class="blog-info-link mt-3 mb-4">
              <li><a href="/categories/{{article.category_id}}"><i class="fa fa-calendar-o"
                    aria-hidden="true"></i>{{article.category_name}}</a></li>
              <li><a href="#cmtArea"><i class="fa fa-comments"></i> {{article.numOfCmt}} Comments</a></li>
              <span class="float-right mr-4">{{formatTime article.created_time}}</span>
            </ul>
            {{{article.content}}}
          </div>
          <div>
            <b>Author: </b>
            {{article.author_name}}
          </div>
        </div>
        <div class="navigation-top">
          <div class="d-sm-flex">
            <p class="like-info"><span class="align-middle"><i class="fa fa-tag"></i></span>Tags:&nbsp;&nbsp;</p>
            {{#each article.tags}}
              {{#if @first}}
                <a href="/tags/{{tag_id}}">
                  {{tag_name}}
                </a>
              {{else}}
                <a href="/tags/{{tag_id}}">
                  , &nbsp;{{tag_name}}
                </a>
              {{/if}}
            {{/each}}
          </div>
        </div>
        <div class="comments-area" id="cmtArea">
          <h4>{{article.numOfCmt}} Comments</h4>
          {{#each article.comments}}
            <div class="comment-list">
              <div class="single-comment justify-content-between d-flex">
                <div class="user justify-content-between d-flex">
                  <div class="thumb">
                    <img src="/img/comment/comment_1.png" alt="">
                  </div>
                  <div class="desc">
                    <p class="comment">
                      {{content}}
                    </p>
                    <div class="d-flex justify-content-between">
                      <div class="d-flex align-items-center">
                        <h5>
                          <span>{{user}}</span>
                        </h5>
                        <p class="date">{{formatTimeWithHour post_time}}</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
        {{#if loggedIn}}
          <div class="comment-form" id="cmtForm">
            <h4>Leave a Comment</h4>
            <form class="form-contact comment_form" action="#" id="commentForm">
              <div class="form-group">
                <textarea class="form-control w-100" name="comment" id="comment" cols="30" rows="9"
                  placeholder="Write Comment"></textarea>
              </div>
              <div class="form-group">
                <button type="submit" class="button button-contactForm btn_1 boxed-btn">Post Comment</button>
              </div>
            </form>
          </div>
        {{else}}
          <div>Please login give comment on this article</div>
        {{/if}}
      </div>
      <div class="col-lg-4">
        <div class="blog_right_sidebar">
          <aside class="single_sidebar_widget popular_post_widget" id="relatedPost">
            <h3 class="widget_title">Random Articles</h3>
            {{#each randomArticles}}
              <div class="media post_item">
                <img src="{{thumbnail_image}}" alt="thumbnail" width="140" height="100">
                <div class="media-body">
                  <a href="/articles/{{id}}">
                    <h3>{{title}}</h3>
                  </a>
                  <p>{{formatTime created_time}}</p>
                </div>
              </div>
            {{/each}}
          </aside>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================ Blog Area end =================-->
<!-- Trending Area Start -->
{{#section "css"}}
  <style>
    a {
      color: inherit
    }
  </style>
{{/section}}
{{#section "js"}}
  <script>
    $(document).ready(() => {
      const height = $('#topTrending').height() - 80;
      $('#topWeekScroll').height(height);
    })
  </script>
{{/section}}
<div class="trending-area fix mt-5">
  <div class="container">
    <div class="trending-main">
      <div class="row ">
        <!-- Riht content -->
        <div class="col-lg-12">
          <div class="section-tittle mb-4">
            <h3>Tag: {{tag.tag_name}}</h3>
          </div>
          <div class="myScroll" id="topWeekScroll">
            {{#each articles}}
              <div class="trand-right-single d-flex">
                <div class="trand-right-img">
                  <img src="{{thumbnail_image}}" width="140px" height="120px" alt="">
                </div>
                <div class="trand-right-cap">
                  <span class="color1"><a href="/categories/{{category_id}}">{{category_name}}</a></span>
                  <h4 class="mb-0"><a href="/articles/{{id}}">{{title}}</a></h4>
                  {{#if is_premium}}
                    <i class="fas fa-key" style="color:orange;">  Premium</i>
                  {{/if}}
                  <div>{{abstract}}</div>
                  <div style="color: #6C639B;">
                    Tags:&nbsp;
                    {{#each tags}}
                      <a href="/tags/{{tag_id}}">
                        {{#if @first}}{{else}},&nbsp;{{/if}}{{tag_name}}
                      </a>
                    {{/each}}
                  </div>
                  <p class="mb-0">{{formatTime created_time}}</p>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="pagination-area pb-45 text-center mt-5">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">
        <div class="single-wrap d-flex justify-content-center">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              {{#each this.page_numbers}}
                {{#if isCurrent}}
                  <li class="page-item active">
                    <a class="page-link" href="javascript:;">{{value}}</a>
                  </li>
                {{else}}
                  <li class="page-item">
                    <a class="page-link" href="?page={{value}}">{{value}}</a>
                  </li>
                {{/if}}
              {{/each}}
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
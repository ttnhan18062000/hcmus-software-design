<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<!-- Include Bootstrap Datepicker -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js"></script>
 
 <div class="container user-info">
        <br>
        <h1 class="text-center">User info</h1>
        <br>
        <form class="form-reg" action="/user/changeInfo" method="POST">
            <div class="form-group row">
                <div class="col-2 text-right">
                    <label for="user-name">User name</label>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control" id="user-name" value={{this.user_name}} disabled>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-2 text-right">
                    <label for="name">Name</label>
                </div>
                <div class="col">
                    <input type="text" class="form-control" id="name" name="name" value="{{this.name}}">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 text-right">
                    <label for="email">Email</label>
                </div>
                <div class="col">
                    <input type="text" class="form-control" id="email" name="email" value={{this.email}}>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 text-right">
                    <label for="last-name">Password</label>
                </div>
                <div class="col-8 pr-0">
                    <input type="password" class="form-control" id="password" value="141353526" disabled>
                </div>
                <div class="col-2">
                    <button type="button" onclick="location.href='/user/otppassword'" class="btn btn-outline-success">Change password</button>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 text-right">
                    <label for="birthdaypicker">Birthday</label>
                </div>
                <div class="col">
                    <div class="input-group date">
                        <input type="text" name="birthdate" class="form-control" id="birthdaypicker" value={{birthdate}}>
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 text-right">
                    <label for="user-name">Subscription ended time</label>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control" id="subscription" value="{{subscribeDate}}" disabled>
                </div>
            </div>

            {{#if penname}}
                <div class="form-group row">
                    <div class="col-2 text-right">
                        <label for="penname">Pen Name</label>
                    </div>
                    <div class="col-10">
                        <input type="text" class="form-control" id="penname" value="{{penname}}" disabled>
                </div>
            </div>
            {{/if}}

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        <br>
    </div>


    <script>
            $('#birthdaypicker').datepicker({
                format: "dd/mm/yyyy"
            });
    </script>